pipeline {
 agent none
  
  environment {
  name='Bhavanishankar.N'
  place='Bangalore'
  Inst='Artisantek'
  }
  parameters {
    booleanParam defaultValue: true, name: 'my_bool'
    choice choices: ['UAT', 'PROD', 'DEV'], name: 'ENV'
    string defaultValue: 'BhavaniShankar.N', name: 'name'
  }
  stages {
   stage('Stage-1') {
     agent {label 'Master'}
      steps {
        git branch: 'main', url: 'https://github.com/brad-jivedh/Jenkins.git'
      }
   } 
   stage('Stage-2') {
    agent {label 'Master'}
     steps{
            echo "Hello everyone"
            sh "My name is ${env.name}"
            sh "I am from ${env.place}"
            sh "I am learning devops from ${env.Inst}"
     }
   }
}
}
