pipeline {
 agent none
  
  environment {
  name='Bhavanishankar.N'
  place='Bangalore'
  Inst='Artisantek'
  }
  parameters {
    booleanParam defaultValue: true, name: 'my_bool'
    choice choices: ['UAT', 'PROD', 'DEV'], name: 'ENV'
    string defaultValue: 'BhavaniShankar.N', name: 'name'
  }
  stages {
   stage('Stage-1') {
     agent {label 'Master'}
      steps {
        git branch: 'main', url: 'https://github.com/brad-jivedh/Jenkins.git'
      }
   } 
   stage('Stage-2') {
    agent {label 'Master'}
     steps{
            echo "Hello everyone"
            echo "My name is ${name}"
            echo "I am from ${place}"
            echo "I am learning devops from ${Inst}"
            echo "The boolean value is ${my_bool}, and the environement is ${ENV}"
         
     }
   }
 post {
  success {
    echo "Stage-2 succesfully executed"
  }
}
   stage('Stage-3) {
     agent {label 'Slave_node'}
       steps{
        echo "The job url is ${env.JOB_URL} and the build no is ${env.BUILD_ID} and the jenkins url is ${env.JENKINS_URL}"
  }
  }
}
}
